@model IEnumerable<ProyectoI_Libreria.Models.Prestamos>

<table class="table table-striped table-rounded">
    <thead style="background-color: #337ab7; color: white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FechaPrestamo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaDevolucion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Devuelto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Libros.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas.CedulaIdentidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personas.Nombre)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPrestamo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDevolucion)
            </td>
            <td>
                @if (item.Devuelto == true)
                {
                    <span>Sí</span>
                }
                else
                {
                    <span>No</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Libros.ISBN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Libros.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personas.CedulaIdentidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personas.Nombre) @Html.DisplayFor(modelItem => item.Personas.Apellidos)
            </td>

            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
